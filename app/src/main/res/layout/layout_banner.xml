<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:background="@color/color_b3b3b3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wwpx396" />


    <include layout="@layout/layout_banner_tip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/wwpx20"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:gravity="center"
                      android:orientation="horizontal"
                      android:layout_height="@dimen/wwpx139">
            <TextView
                android:id="@+id/tv_middle_title"
                android:text="@string/special_performance"
                style="@style/NormalText"/>

            <ImageView
                android:layout_width="@dimen/wwpx35"
                android:src="@mipmap/ic_arrow_right"
                android:layout_marginLeft="@dimen/wwpx10"
                android:layout_height="@dimen/wwpx35"/>
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:padding="@dimen/wwpx20"
            android:id="@+id/rv_special"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <!--横向title滑动-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hor"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/wwpx20"
        android:layout_height="wrap_content"/>
</LinearLayout>